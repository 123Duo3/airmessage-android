<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Base.DayNight" parent="Theme.MaterialComponents" />
	<style name="Base.DayNight.NoActionBar" parent="Theme.MaterialComponents.NoActionBar" />
	
	<style name="SolidActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="android:colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
	</style>
	
	<style name="AppTheme.Setup" parent="@style/Theme.MaterialComponents.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		
		<item name="android:navigationBarColor">@color/colorPrimaryDark</item>
		<item name="android:statusBarColor">#212121</item>
		<item name="android:windowLightStatusBar">false</item>
	</style>
	
	<style name="ActionModeOverflowMenu" parent="Widget.AppCompat.ListPopupWindow">
		<item name="android:textColor">@android:color/primary_text_dark</item>
	</style>
</resources>