<resources>
	
	<style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:actionModeBackground">@color/colorPrimary</item>
		<item name="android:actionModeCloseDrawable">@drawable/arrow_back</item>
		<item name="android:actionBarTheme">@style/SolidActionBar</item>
		<item name="android:windowBackground">@color/colorBackgroundLight</item>
	</style>
	
	<style name="SolidActionBar">
		<item name="android:colorControlNormal">@android:color/white</item>
		<item name="android:titleTextColor">@android:color/primary_text_dark</item>
		<item name="android:textColorPrimary">@android:color/primary_text_dark</item>
	</style>
	
	<style name="AppTheme.AppCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:colorBackground">@color/colorBackgroundLight</item>
		
		<item name="android:colorControlActivated">?android:attr/colorAccent</item>
		<item name="android:actionBarTheme">@style/SolidActionBar</item>
		<item name="android:windowBackground">@color/colorBackgroundLight</item>
		<item name="android:actionModeBackground">@android:color/transparent</item>
		<item name="android:actionModeCloseDrawable">@drawable/arrow_back</item>
		<item name="actionModeCloseDrawable">@drawable/arrow_back</item>
	</style>
	
	<style name="AppTheme.AppCompat.Messaging" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="android:actionBarTheme">@style/SolidActionBar</item>
	</style>
	
	<style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog"> <!-- @android:style/Theme.Material.Light.Dialog.NoActionBar -->
