<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/content_audio"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical">

		<include layout="@layout/listitem_contentdownload" />
		
		<LinearLayout
			android:id="@+id/content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:visibility="gone">
			<ImageView
				android:id="@+id/content_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/play_rounded"
				android:tint="?android:attr/textColorPrimary"
				android:layout_marginEnd="4dp"/>
			
			<TextView
				android:id="@+id/content_duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/placeholder_audioduration"
				android:textColor="?android:attr/textColorPrimary"
				android:textSize="16sp"
				android:gravity="center_vertical" />
			
			<ProgressBar
				android:id="@+id/content_progress"
				style="?android:attr/progressBarStyleHorizontal"
				android:theme="@style/Theme.AppCompat.Light"
				android:layout_width="80dp"
				android:layout_height="5dp"
				android:width="0dip"
				android:layout_marginStart="8dp"
				android:indeterminate="false"
				android:max="100"
				android:progressDrawable="@drawable/progressbar_rounded" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/failedcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:gravity="center_vertical"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/failed_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:text="@string/part_content_audio"
				android:textColor="?android:attr/textColorPrimary"
				android:drawableEnd="@drawable/open_rounded"
				android:drawablePadding="4dp"
				android:textSize="16sp"
				android:drawableTint="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/processingcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:gravity="center_vertical"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/processing_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/part_content_audio"
				android:gravity="center_vertical"
				android:textColor="?android:attr/textColorPrimary"
				android:drawableEnd="@drawable/upload_rounded"
				android:drawablePadding="4dp"
				android:textSize="16sp"
				android:drawableTint="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<include layout="@layout/layout_tapbackcontainer" />
	</LinearLayout>
	
	<include layout="@layout/layout_stickercontainer" />
</FrameLayout>