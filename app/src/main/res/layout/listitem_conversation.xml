<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:orientation="horizontal"
	android:paddingBottom="15dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="15dp">
	<!-- Conversation Icon -->
	<RelativeLayout
		android:id="@+id/conversationicon"
		android:layout_width="@dimen/profile_size"
		android:layout_height="@dimen/profile_size">
		<!-- 1 user -->
		<ViewStub
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/listitem_conversation_icon1" />
		<!-- 2 users -->
		<ViewStub
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/listitem_conversation_icon2" />
		<!-- 3 users -->
		<ViewStub
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/listitem_conversation_icon3" />
		<!-- 4 users -->
		<ViewStub
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/listitem_conversation_icon4" />
		<!-- Selected Icon -->
		<RelativeLayout
			android:id="@+id/selected"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/circle"
			android:backgroundTint="@color/colorPrimary"
			android:visibility="gone">
			
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:src="@drawable/check" />
		</RelativeLayout>
	</RelativeLayout>
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp">
		<!-- Message details -->
		<TextView
			android:id="@+id/title"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="@string/placeholder_title"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="16sp"
			app:layout_constraintEnd_toStartOf="@+id/flag_muted"
			app:layout_constraintStart_toStartOf="parent" />
		
		<TextView
			android:id="@+id/message"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="@string/placeholder_message"
			android:textColor="?android:textColorSecondary"
			android:textSize="14sp"
			app:layout_constraintEnd_toStartOf="@+id/unread"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/title" />
		<!-- Conversation flags -->
		<ImageView
			android:id="@+id/flag_muted"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_marginEnd="6dp"
			android:src="@drawable/notifications_off"
			android:tint="?android:attr/textColorSecondary"
			app:layout_constraintBottom_toBottomOf="@+id/time"
			app:layout_constraintEnd_toStartOf="@+id/time"
			app:layout_constraintTop_toTopOf="@+id/time" />
		
		<TextView
			android:id="@+id/time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="@string/placeholder_time"
			android:textColor="?android:attr/textColorSecondary"
			app:layout_constraintEnd_toEndOf="parent" />
		
		<TextView
			android:id="@+id/unread"
			android:layout_width="wrap_content"
			android:layout_height="19dp"
			android:minWidth="19dp"
			android:background="@drawable/rounded_circle"
			android:backgroundTint="@color/colorPrimary"
			android:maxLines="1"
			android:text="1"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:gravity="center"
			android:textColor="@android:color/white"
			android:textSize="12sp"
			app:layout_constraintBottom_toBottomOf="@+id/message"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@+id/message" />
	</android.support.constraint.ConstraintLayout>
