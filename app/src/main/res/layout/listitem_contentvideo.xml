<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/content_video"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center">
		
		<LinearLayout
			android:id="@+id/downloadcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:orientation="horizontal"
			android:gravity="center_vertical">
			
			<ProgressBar
				android:id="@+id/download_progress"
				style="?android:attr/progressBarStyleHorizontal"
				android:theme="@style/Theme.AppCompat.Light"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:indeterminate="true"
				android:indeterminateOnly="false"
				android:indeterminateTint="@color/colorMessageOutgoingAccent"
				android:max="100"
				android:progressTint="@color/colorMessageOutgoingAccent"
				android:visibility="gone" />
			
			<TextView
				android:id="@+id/download_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:text="@string/part_content_video"
				android:layout_marginEnd="4dp"
				android:textColor="?android:attr/textColorPrimary" />
			
			<ImageView
				android:id="@+id/download_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/download"
				android:tint="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<android.support.constraint.ConstraintLayout
			android:id="@+id/content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone">
			<me.tagavari.airmessage.view.RoundedImageView
				android:id="@+id/content_view"
				android:layout_width="@dimen/image_width_preferred"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:minHeight="@dimen/image_height_min" />
			
			<me.tagavari.airmessage.view.InvisibleInkView
				android:id="@+id/content_ink"
				android:layout_width="0px"
				android:layout_height="0px"
				app:layout_constraintLeft_toLeftOf="@id/content_view"
				app:layout_constraintRight_toRightOf="@id/content_view"
				app:layout_constraintTop_toTopOf="@id/content_view"
				app:layout_constraintBottom_toBottomOf="@id/content_view"
				android:visibility="gone" />
			
			<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:src="@drawable/play_circle" />
		</android.support.constraint.ConstraintLayout>
		
		<LinearLayout
			android:id="@+id/failedcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:gravity="center_vertical"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/failed_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:text="@string/part_content_video"
				android:textColor="?android:attr/textColorPrimary"
				android:drawableEnd="@drawable/open"
				android:drawablePadding="4dp"
				android:drawableTint="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/processingcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/messagebubble_minheight"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:gravity="center_vertical"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/processing_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/part_content_video"
				android:gravity="center_vertical"
				android:textColor="?android:attr/textColorPrimary"
				android:drawableEnd="@drawable/upload"
				android:drawablePadding="4dp"
				android:drawableTint="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<include layout="@layout/layout_tapbackcontainer" />
	</LinearLayout>
	
	<include layout="@layout/layout_stickercontainer" />
</FrameLayout>