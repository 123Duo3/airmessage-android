<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/content_image"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center">
		
		<include layout="@layout/listitem_contentdownload" />
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone">
			<me.tagavari.airmessage.view.RoundedImageView
				android:id="@+id/content_view"
				android:layout_width="@dimen/image_width_preferred"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:minHeight="@dimen/image_height_min" />
			
			<me.tagavari.airmessage.view.InvisibleInkView
				android:id="@+id/content_ink"
				android:layout_width="0px"
				android:layout_height="0px"
				app:layout_constraintLeft_toLeftOf="@id/content_view"
				app:layout_constraintRight_toRightOf="@id/content_view"
				app:layout_constraintTop_toTopOf="@id/content_view"
				app:layout_constraintBottom_toBottomOf="@id/content_view"
				android:visibility="gone" />
			
			<!-- <View
				android:id="@+id/content_background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:backgroundTint="@color/colorImageUnloaded"
				android:visibility="gone" /> -->
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<LinearLayout
			android:id="@+id/failedcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:gravity="center_vertical"
			android:minHeight="@dimen/messagebubble_minheight"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/failed_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableEnd="@drawable/open"
				android:drawablePadding="4dp"
				android:drawableTint="?android:attr/textColorPrimary"
				android:gravity="center_vertical"
				android:text="@string/part_content_image"
				android:textColor="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/processingcontent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/rounded_rectangle"
			android:backgroundTint="@color/colorMessageOutgoing"
			android:gravity="center_vertical"
			android:minHeight="@dimen/messagebubble_minheight"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/messagebubble_padding_y"
			android:paddingLeft="@dimen/messagebubble_padding_x"
			android:paddingRight="@dimen/messagebubble_padding_x"
			android:paddingTop="@dimen/messagebubble_padding_y"
			android:visibility="gone">
			
			<TextView
				android:id="@+id/processing_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableEnd="@drawable/upload"
				android:drawablePadding="4dp"
				android:drawableTint="?android:attr/textColorPrimary"
				android:gravity="center_vertical"
				android:text="@string/part_content_image"
				android:textColor="?android:attr/textColorPrimary" />
		</LinearLayout>
		
		<include layout="@layout/layout_tapbackcontainer" />
	</LinearLayout>
	
	<include layout="@layout/layout_stickercontainer" />
</FrameLayout>