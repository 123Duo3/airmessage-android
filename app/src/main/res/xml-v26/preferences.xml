<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<androidx.preference.Preference
		android:key="@string/preference_messagenotifications_key"
		android:title="@string/preference_messagenotifications_title" />
	<androidx.preference.PreferenceCategory
		android:key="@string/preferencegroup_appearance_key"
		android:title="@string/preferencegroup_appearance_title"
		android:paddingLeft="0px">
		<androidx.preference.ListPreference
			android:defaultValue="follow_system"
			android:entries="@array/preference_appearance_theme_entries"
			android:entryValues="@array/preference_appearance_theme_values"
			android:key="@string/preference_appearance_theme_key"
			android:title="@string/preference_appearance_theme_title"
			android:summary="%s" />
		<androidx.preference.SwitchPreferenceCompat
			android:key="@string/preference_appearance_location_key"
			android:persistent="false"
			android:title="@string/preference_appearance_location_title"
			android:summary="@string/preference_appearance_location_description" />
		<androidx.preference.SwitchPreferenceCompat
			android:key="@string/preference_appearance_advancedcolor_key"
			android:title="@string/preference_appearance_advancedcolor_title"
			android:summary="@string/preference_appearance_advancedcolor_description"
			android:defaultValue="false" />
		<androidx.preference.SwitchPreferenceCompat
			android:key="@string/preference_appearance_showreadreceipts_key"
			android:title="@string/preference_appearance_showreadreceipts_title"
			android:summary="@string/preference_appearance_showreadreceipts_description"
			android:defaultValue="true" />
	</androidx.preference.PreferenceCategory>
	<androidx.preference.PreferenceCategory
		android:key="@string/preferencegroup_storage_key"
		android:title="@string/preferencegroup_storage_title">
		<me.tagavari.airmessage.view.MultiLineSwitchPreference
			android:defaultValue="false"
			android:key="@string/preference_storage_autodownload_key"
			android:title="@string/preference_storage_autodownload_title"
			android:summary="@string/preference_storage_autodownload_desc" />
		<!-- <androidx.preference.Preference
			android:key="@string/preference_server_downloadattachments_key"
			android:title="@string/preference_server_downloadattachments_title" /> -->
		<androidx.preference.Preference
			android:key="@string/preference_storage_deleteattachments_key"
			android:title="@string/preference_storage_deleteattachments_title"
			android:summary="@string/preference_storage_deleteattachments_desc" />
		<androidx.preference.Preference
			android:key="@string/preference_server_downloadmessages_key"
			android:title="@string/preference_server_downloadmessages_title" />
	</androidx.preference.PreferenceCategory>
	<androidx.preference.PreferenceCategory
		android:key="@string/preferencegroup_server_key"
		android:title="@string/preferencegroup_server_title">
		<androidx.preference.Preference
			android:key="@string/preference_server_serverdetails_key"
			android:title="@string/preference_server_serverdetails_title">
			<intent
				android:action="android.intent.action.VIEW"
				android:targetClass="me.tagavari.airmessage.ServerSetup"
				android:targetPackage="me.tagavari.airmessage" />
		</androidx.preference.Preference>

		<me.tagavari.airmessage.view.HostnameEditTextPreference
			android:key="@string/preference_server_serverfallback_key"
			android:title="@string/preference_server_serverfallback_title"
			android:summary="@string/preference_server_serverfallback_description" />

		<!-- <androidx.preference.SwitchPreferenceCompat
			android:key="@string/preference_server_foregroundservice_key"
			android:title="@string/preference_server_foregroundservice_title"
			android:summary="@string/preference_server_foregroundservice_description"
			android:defaultValue="true" /> -->
		<me.tagavari.airmessage.view.MultiLineSwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_server_connectionboot_key"
			android:title="@string/preference_server_connectionboot_title" />
		<!-- <androidx.preference.SwitchPreferenceCompat
			android:key="@string/preference_server_disconnectionnotification_key"
			android:title="@string/preference_server_disconnectionnotification_title"
			android:summary="@string/preference_server_disconnectionnotification_description"
			android:defaultValue="true" /> -->
		<!-- <androidx.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/preference_server_dropreconnect_key"
			android:summary="@string/preference_server_dropreconnect_description"
			android:title="@string/preference_server_dropreconnect_title" />
		<androidx.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="@string/preference_server_networkreconnect_key"
			android:summary="@string/preference_server_networkreconnect_description"
			android:title="@string/preference_server_networkreconnect_title" /> -->
		<androidx.preference.Preference
			android:key="@string/preference_server_help_key"
			android:title="@string/preference_server_help_title" />
	</androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>