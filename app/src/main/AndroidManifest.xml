<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="me.tagavari.airmessage">
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	
	<application
		android:allowBackup="true"
		android:appCategory="social"
		android:icon="@drawable/app_icon"
		android:label="@string/app_name"
		android:name=".MainApplication"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.AppCompat">
		<!-- Conversation List -->
		<activity
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:name=".Conversations"
			android:theme="@style/AppTheme.AppCompat.NoActionBar"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!-- Messaging Screen -->
		<activity
			android:exported="false"
			android:name=".Messaging"
			android:parentActivityName=".Conversations"
			android:theme="@style/AppTheme.AppCompat.NoActionBar"
			android:windowSoftInputMode="adjustResize|stateUnchanged" />
		<!-- New Message -->
		<activity
			android:exported="false"
			android:label="@string/screen_newconversation"
			android:name=".NewMessage"
			android:theme="@style/AppTheme.AppCompat.NoActionBar"
			android:parentActivityName=".Conversations"
			android:windowSoftInputMode="adjustResize|stateVisible" />
		<!-- Conversation information -->
		<activity
			android:exported="false"
			android:label="@string/screen_conversationdetails"
			android:name=".MessagingInfo"
			android:parentActivityName=".Messaging" />
		<!-- Preferences -->
		<activity
			android:exported="false"
			android:label="@string/screen_settings"
			android:name=".Preferences"
			android:parentActivityName=".Conversations" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.NOTIFICATION_PREFERENCES" />
			</intent-filter>
		</activity>
		<!-- Image draw -->
		<activity
			android:exported="false"
			android:name=".ImageDraw"
			android:theme="@style/AppTheme.ImageDraw" />
		<!-- Setup -->
		<activity
			android:exported="false"
			android:name=".ServerSetup"
			android:theme="@style/AppTheme.Setup">
			<!-- <intent-filter>
				<action android:name="me.tagavari.airmessage.ServerSetup" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter> -->
		</activity>
		<!-- Blocked addresses -->
		<!-- <activity android:name=".BlockedAddresses">
		</activity> -->
		<!-- Share Handler -->
		<activity
			android:excludeFromRecents="true"
			android:exported="true"
			android:name=".ShareHandler"
			android:noHistory="true"
			android:theme="@style/DialogTheme">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
		<!-- Notification response -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".NotificationUtils$NotificationResponse" />
		<!-- Server connection manager service -->
		<service
			android:description="@string/servicedesc_connectionservice"
			android:exported="false"
			android:name=".ConnectionService" />
		<provider
			android:authorities="me.tagavari.airmessage.fileprovider"
			android:exported="false"
			android:grantUriPermissions="true"
			android:name="android.support.v4.content.FileProvider">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/provider_paths" />
		</provider>
		<!-- Start service on boot -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".ConnectionService$ServiceStart">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
	</application>
</manifest>