<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="me.tagavari.airmessage">
	
	<!-- Normal permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
	
	<!-- Dangerous permissions -->
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	
	<application
		android:allowBackup="true"
		android:fullBackupContent="@xml/backup_rules"
		android:appCategory="social"
		android:icon="@mipmap/app_icon"
		android:roundIcon="@mipmap/app_icon"
		android:label="@string/app_name"
		android:name=".MainApplication"
		android:supportsRtl="true"
		android:theme="@style/DayNight"
		tools:ignore="GoogleAppIndexingWarning">
		<!-- Conversation List -->
		<activity
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:name=".Conversations"
			android:theme="@style/DayNight.NoActionbar.Unprotected"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<!-- Messaging Screen -->
		<activity
			android:exported="false"
			android:name=".Messaging"
			android:parentActivityName=".Conversations"
			android:theme="@style/DayNight.NoActionbar.Unprotected"
			android:windowSoftInputMode="adjustResize|stateUnchanged" />
		<!-- New Message -->
		<activity
			android:exported="false"
			android:label="@string/screen_newconversation"
			android:name=".NewMessage"
			android:parentActivityName=".Conversations"
			android:theme="@style/DayNight.NoActionbar.Unprotected"
			android:windowSoftInputMode="adjustResize|stateVisible" />
		<!-- Preferences -->
		<activity
			android:exported="false"
			android:label="@string/screen_settings"
			android:name=".Preferences"
			android:theme="@style/DayNight.NoActionbar.Unprotected"
			android:parentActivityName=".Conversations">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.NOTIFICATION_PREFERENCES" />
			</intent-filter>
		</activity>
		<!-- Image draw -->
		<activity
			android:exported="false"
			android:name=".ImageDraw"
			android:theme="@style/AppTheme.ImageDraw" />
		<!-- Setup -->
		<activity
			android:exported="false"
			android:name=".ServerSetup"
			android:theme="@style/AppTheme.Setup">
			<!--
            <intent-filter>
				<action android:name="me.tagavari.airmessage.ServerSetup" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
            -->
		</activity>
		<!-- Blocked addresses -->
		<!--
        <activity android:name=".BlockedAddresses">
		</activity>
        -->
		<!-- Share Handler -->
		<activity
			android:excludeFromRecents="true"
			android:exported="true"
			android:name=".ShareHandler"
			android:noHistory="true"
			android:theme="@style/ActivityDialogTheme">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND_MULTIPLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
		</activity>
		<!-- Notification response -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".NotificationUtils$NotificationBroadcastReceiver" />
		<!-- Server connection manager service -->
		<service
			android:description="@string/servicedesc_connectionservice"
			android:exported="false"
			android:name=".ConnectionService" />
		<provider
			android:authorities="me.tagavari.airmessage.fileprovider"
			android:exported="false"
			android:grantUriPermissions="true"
			android:name="androidx.core.content.FileProvider">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/provider_paths" />
		</provider>
		<!-- Start service on boot -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".ConnectionService$ServiceStartBoot">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<!-- Disables automatic Crashlytics initialization -->
		<meta-data
			android:name="firebase_crashlytics_collection_enabled"
			android:value="false" />
	</application>
</manifest>