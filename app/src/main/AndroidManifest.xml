<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="me.tagavari.airmessage">
	
	<!-- Normal permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
	
	<!-- Dangerous permissions -->
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	
	<application
		android:allowBackup="true"
		android:fullBackupContent="@xml/backup_rules"
		android:appCategory="social"
		android:icon="@mipmap/app_icon"
		android:roundIcon="@mipmap/app_icon"
		android:label="@string/app_name"
		android:name=".MainApplication"
		android:supportsRtl="true"
		tools:ignore="GoogleAppIndexingWarning">
		<!-- Conversation list -->
		<activity
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:name=".Conversations"
			android:theme="@style/DayNight.NoActionBar.Protected"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			
			<meta-data android:name="android.app.shortcuts" android:resource="@xml/shortcuts" />
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
		</activity>

		<!-- Messaging screen -->
		<activity
			android:exported="false"
			android:name=".Messaging"
			android:parentActivityName=".Conversations"
			android:theme="@style/DayNight.NoActionBar"
			android:windowSoftInputMode="adjustResize">
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
		</activity>

		<!-- New message -->
		<activity
			android:exported="false"
			android:label="@string/screen_newconversation"
			android:name=".NewMessage"
			android:parentActivityName=".Conversations"
			android:theme="@style/DayNight.NoActionBar.Protected"
			android:windowSoftInputMode="adjustResize|stateVisible">
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
	</activity>

		<!-- Preferences -->
		<activity
			android:exported="false"
			android:label="@string/screen_settings"
			android:name=".Preferences"
			android:theme="@style/DayNight.NoActionBar.Protected"
			android:parentActivityName=".Conversations">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.NOTIFICATION_PREFERENCES" />
			</intent-filter>
			
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
		</activity>

		<!-- Image draw -->
		<!-- <activity
			android:exported="false"
			android:name=".ImageDraw"
			android:theme="@style/AppTheme.ImageDraw" /> -->
		<!-- Server setup -->
		<activity
			android:exported="false"
			android:name=".ServerSetup"
			android:theme="@style/AppTheme.Setup">
			<!--
            <intent-filter>
				<action android:name="me.tagavari.airmessage.ServerSetup" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
            -->
			
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
		</activity>

		<!-- Location picker -->
		<activity
			android:exported="false"
			android:name=".LocationPicker"
			android:parentActivityName=".Messaging"
			android:theme="@style/DayNight.Transparent"
			android:windowSoftInputMode="adjustResize">
			<meta-data android:name="WindowManagerPreference:SuppressWindowControlNavigationButton" android:value="true" />
		</activity>

		<!-- Blocked addresses -->
		<!--
        <activity android:name=".BlockedAddresses">
		</activity>
        -->

		<!-- Share Handler -->
		<activity
			android:excludeFromRecents="true"
			android:exported="true"
			android:name=".ShareHandler"
			android:noHistory="true"
			android:theme="@style/ActivityDialogTheme">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND_MULTIPLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="*/*" />
			</intent-filter>
		</activity>

		<!-- Notification response -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".NotificationUtils$NotificationBroadcastReceiver" />

		<!-- Server connection manager service -->
		<service
			android:description="@string/servicedesc_connectionservice"
			android:exported="false"
			android:name=".ConnectionService" />

		<!-- File export service -->
		<service
			android:description="@string/servicedesc_fileexportservice"
			android:exported="false"
			android:name=".FileExportService" />

		<!-- File provider -->
		<provider
			android:authorities="me.tagavari.airmessage.fileprovider"
			android:exported="false"
			android:grantUriPermissions="true"
			android:name="androidx.core.content.FileProvider">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/provider_paths" />
		</provider>

		<!-- Start service on boot -->
		<receiver
			android:enabled="true"
			android:exported="false"
			android:name=".ConnectionService$ServiceStartBoot">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<!-- Disables automatic Crashlytics initialization -->
		<meta-data
			android:name="firebase_crashlytics_collection_enabled"
			android:value="false" />

		<!-- Google Maps API -->
		<meta-data
			android:name="com.google.android.geo.API_KEY"
			android:value="AIzaSyCuqxy6XwkYtc1H3s-vealUkfyUBxSb45w" />

		<meta-data
			android:name="com.google.android.gms.car.application"
			android:resource="@xml/automotive_app_desc" />
	</application>
</manifest>